@charset 'utf-8';
// 主色
@basecolor: #4f79bc;

ul{
    list-style: none;
    padding: 0;
    margin: 0;
}
main {
    margin-top: 10px;

    .py-left-nav {
        &>li {
            padding: 0;
            &>a {
                display: block;
                width: 100%;
                height: 100%;
                background: #f5f5f5;
                padding: 10px 15px;
            }

            .py-inner-ul {
                border-top: 1px solid #ddd;

                li {
                    line-height: 40px;
                    padding-left: 30px;
                }
            }
        }

    }

    .py-right-content {
        .py-account-info {
            padding-bottom: 16px;
            border-bottom: 1px solid #ddd;
            display: flex;
            align-items: center;
            line-height: 36px;

            .avatar {
                img {
                    height: 94px;
                }
            }
            .py-text {
                padding-left: 20px;
            }
        }
        .py-asset {
            font-size: 18px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 20px;
        }
        .py-btn{
            text-align: center;
            margin: 10px auto;
        }
        .py-iconGroup{
            margin-top: 30px;
            &>div>p{
                margin-top: 20px;
                margin-bottom: 20px;
            }
            .py-top{
                display: flex;
                align-items: center;
                .py-text{
                    margin-left: 15px;
                    h5{
                        font-weight: bold;
                        margin-top: 5px;
                    }
                    p{
                        a{
                            margin-left: 5px;
                        }
                    }
                }
            }
        }
    }
}