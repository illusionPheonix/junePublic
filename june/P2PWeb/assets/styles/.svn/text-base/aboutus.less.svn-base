.py-img-bg {
    height: 220px;
    background: url('/dist/images/ban-1.png') center;
}

.py-about {
    background: #f2f2f2;

    .py-con {
        margin-top: 20px;
        background: #fff;
        margin-bottom: 20px;

        h2 {
            font-size: 22px;
            text-indent: 20px;
            border-bottom: 1px solid #ccc;
            line-height: 60px;
        }

        p {
            text-align: center;
            margin-bottom: 10px;
            color: #8c8c8c;

        }

    }

    .py-his {
        background: #fff;
        margin-bottom: 40px;

        h2 {
            font-size: 22px;
            text-indent: 20px;
            border-bottom: 1px solid #ccc;
            line-height: 60px;
        }

        img {
            margin-left: 40px;
            margin-bottom: 20px;
        }

        p {
            margin-bottom: 10px;
            color: #8c8c8c;
        }
    }
}