.py-img-bg {
    height: 220px;
    background: url('/dist/images/ban-h.png') center;
}

.py-Novice {
    background: #f2f2f2;

    .py-help {
        margin-top: 30px;
        background: #fff;
        margin-bottom: 40px;
        padding-bottom: 30px;

        h2 {
            font-size: 22px;
            text-indent: 20px;
            border-bottom: 1px solid #ccc;
            line-height: 60px;
        }

        ul li {
            color: #666;
            line-height: 40px;
            margin-left: 40px;

            span {
                display: inline-block;
                width: 800px;

                a {
                    font-size: 16px;
                    color: #666;
                }
            }
        }
    }
}