.py-credit{
    padding: 20px;
    background-color: #F4F8FA;
    border-left: 2px solid #0099DD;
    margin-bottom: 20px;
    h3{
        margin-top: 20px;
        margin-bottom: 10px;
        color: #09d;
    }
}
.py-msg{
    padding-bottom: 9px;
    margin: 40px 0 20px;
    border-bottom: 1px solid #eee;
    font-size: 20px;
}
form{
    position: relative;

    .py-correlation{
        width: 300px;
        border-radius: 3px;
        border: 1px solid #ddd;
        box-shadow: 1px 1px 20px #ddd;
        padding: 20px 30px;
        position: absolute;
        top: 10px;
        right: 100px;
    
    }
}