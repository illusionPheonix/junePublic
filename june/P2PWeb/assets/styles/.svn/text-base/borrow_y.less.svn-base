.py-con{
    margin-top: 20px;
    margin-bottom: 20px;

    .py-box{
        background: #f9f9f9;
        height: 276px;
        width: 360px;
        margin-right: 30px;
        padding: 0;
        .py-header{
            font-size: 24px;
            background-color: #40d47e;
            color: #fff;
            padding-left: 20px;
            line-height: 48px;
            font-weight: 300;
        
            

        }
        .py-msg{
            padding: 15px;
            .py-sum{
                font-size: 16px;
                margin-bottom: 10px;
            }
            .py-region{
                font-size: 13px;
                color: #737373;
                margin-top: 5px;
                margin-bottom: 10px;

            }
            ul{
                padding: 0 0 0 10px;
                li{
                    list-style: none;
                    background: url("../../dist/images/sequare.png")no-repeat;
                    text-indent: 20px;
                    margin-bottom: 8px;
                }
            }
            .py-proposer{
                border-radius: 20px;
                background-color: #00a8ff;
                border: none;
                margin-left: 130px;
                
            }
                
        }
        
    }
}
